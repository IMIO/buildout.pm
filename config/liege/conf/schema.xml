    <field name="getRawClassifier"         type="string"   indexed="true"  stored="true" />
    <field name="getRawRelatedItems"       type="string"   indexed="true"  stored="true" />
    <field name="getTakenOverBy"           type="string"   indexed="true"  stored="true" />
